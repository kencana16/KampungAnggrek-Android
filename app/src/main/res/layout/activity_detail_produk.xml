<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProdukActivity"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_gambar_detail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:src="@color/cardview_dark_background"
            />
        <GridLayout
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:columnCount="3"
            android:rowCount="5">

            //baris 1
            <TextView
                android:layout_width="100dp"
                android:layout_columnWeight="1"
                android:text="Nama Produk"
                android:layout_column="0"
                android:layout_row="0"/>
            <TextView
                android:textAlignment="center"
                android:layout_columnWeight="1"
                android:paddingHorizontal="5dp"
                android:text=":"
                android:layout_column="1"
                android:layout_row="0"/>
            <TextView
                android:layout_width="200dp"
                android:id="@+id/tv_namaBarang_detail"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="0"
                tools:text="barang ini dan itu"/>

            //baris 2
            <TextView
                android:layout_width="100dp"
                android:layout_columnWeight="1"
                android:text="Jumlah Produk"
                android:layout_column="0"
                android:layout_row="1"/>
            <TextView
                android:textAlignment="center"
                android:layout_columnWeight="1"
                android:paddingHorizontal="5dp"
                android:text=":"
                android:layout_column="1"
                android:layout_row="1"/>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="1">
                <TextView
                    android:id="@+id/tv_jumlahBarang_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "/>
                <TextView
                    android:id="@+id/tv_satuan_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="buah"/>
            </LinearLayout>

            //baris 3
            <TextView
                android:layout_width="100dp"
                android:layout_columnWeight="1"
                android:text="Harga"
                android:layout_column="0"
                android:layout_row="2"/>
            <TextView
                android:textAlignment="center"
                android:layout_columnWeight="1"
                android:paddingHorizontal="5dp"
                android:text=":"
                android:layout_column="1"
                android:layout_row="2"/>
            <TextView
                android:layout_width="200dp"
                android:id="@+id/tv_hargaBarang_detail"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="2"
                tools:text="Rp. 20.000.000"/>

            //baris 4
            <TextView
                android:layout_width="100dp"
                android:layout_columnWeight="1"
                android:text="Deskripsi"
                android:layout_column="0"
                android:layout_row="3"/>
            <TextView
                android:textAlignment="center"
                android:layout_columnWeight="1"
                android:paddingHorizontal="5dp"
                android:text=":"
                android:layout_column="1"
                android:layout_row="3"/>
            <TextView
                android:layout_width="200dp"
                android:id="@+id/tv_deskripsi_detail"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="3"
                tools:text="@tools:sample/lorem/random"/>
        </GridLayout>
    </LinearLayout>

</ScrollView>