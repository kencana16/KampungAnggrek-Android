<resources>

    <!-- Style aplikasi -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/pink</item>
    </style>

    <!--  Style untuk activity tanpa action bar  -->
    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:textColorSecondary">#fff</item>
    </style>

    <!--  Style toolbar terbuka  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">cursive</item>
    </style>

    <!--  Style untuk toolbar tertutup  -->
    <style name="Toolbar.TitleText2" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">23dp</item>
        <item name="android:fontFamily">cursive</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
    </style>

</resources>
